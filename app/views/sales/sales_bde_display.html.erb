<section id="main-content">
    <section class="wrapper">
       <div class="row">
         <div class="col-lg-12">
            <section class="panel">
               <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
                 <bold><h4>Sales BDE Details</h4></bold>
                </header>
                  <table class="table table-bordered table-striped table-hover table-condensed">
                   <thead>
                     <tr>
                       <th>Sales Id</th>
                       <th>Skype Id</th>
                       <th></th>
                     </tr>
                   </thead>
                   <tbody>
                    <% @sale.each do |sale| %>
                      <tr>
                        <td><%= sale.sales_id %></td>
                        <td><%= sale.skype_id%></td>
                        <td><%= link_to "Edit", sales_bde_edit_user_sales_path(current_user, :bdes => sale),class: "btn btn-primary btn-xs" %></td>
                      </tr>
                    <% end %>
                   </tbody>
                </table>
            </section>
                 <%= link_to "Add More",  sales_bde_new_user_sales_path(current_user),class: "btn btn-primary btn-xs" %>
          </div>
        </div>
   </section>
</section>