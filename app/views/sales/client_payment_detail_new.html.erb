<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
          <bold><h4>Payment Details</h4></bold>
        </header>
            <%= form_for @clients, :url =>client_payment_detail_create_user_sales_path(current_user,:assigned_id=>@client_user), :method => "post"  do |f| %>
              <div class="panel-body">
              <div class=" form">
                <% if @clients.errors.any? %>
                <div id="error_explanation" class ="alert alert-danger">
                  <ul>
                    <% @clients.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>
                <div class="col-lg-9">
                  <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Payment Mode*</label>
                      <div class="col-lg-8">
                        <%= f.text_field :payment_mode, :class=>"form-control", :required => true %><br/>
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Payment Amount* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :payment_amount, :class=>"form-control", :required => true %><br/>
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Payment Date* </label>
                      <div class="col-lg-6">
                          <%= f.date_select :payment_date ,{order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 15, end_year: Date.today.year + 22},{required: true} %><br /><br />
                      </div>
                    </div>
                    <%= f.hidden_field :sales_id, :value=>current_user.id %>
                    <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-8">
                        <center>
                        <%= link_to "Back", client_lists_user_sales_path(current_user),class: "btn btn-primary btn-xs" %>
                        <button class="btn btn-danger" type="submit">Save Details</button>
                        <button class="btn btn-warning" type="reset">Reset</button></center>
                      </div>
                    </div>
                </div>
              </form>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </section>
</section>
