<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
          <bold><h4>Edit Consultant Details</h4></bold>
        </header>
               <%= form_for @consultant, :url =>  sales_consultant_update_user_sales_path(current_user, :consultants =>@consultant.id) do |f| %>

             
              <div class=" col-lg-3">
              </div>
              <div class="panel-body">
              <div class=" form">
                <% if  @consultant.errors.any? %>
                <div id="error_explanation" class ="alert alert-danger">
                  <ul>
                    <%  @consultant.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>
                <div class=" form col-lg-9">
                  <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Name* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :name ,:class=>"form-control", :value => (current_user.first_name+" "+current_user.last_name if current_user.first_name.present? || f.object.new_record? ),:readonly => true %><br/>
                    
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Commission </label>
                      <div class="col-lg-8">
                        <%= f.text_field :commission,:class=>"form-control"%><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Contact* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :contact ,:class=>"form-control", :required => true %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Skype Id</label>
                      <div class="col-lg-8">
                        <%= f.text_field :skype_id,:class=>"form-control"%><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Email Id*</label>
                      <div class="col-lg-8">
                        <%= f.text_field :email_id ,:class=>"form-control",  :value => (current_user.email if current_user.email.present? || f.object.new_record? ),:readonly => true %><br/>
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Location</label>
                      <div class="col-lg-8">
                        <%= f.text_field :location ,:class=>"form-control" %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Address </label>
                      <div class="col-lg-8">
                        <%= f.text_field :address,:class=>"form-control" %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Bank Account No* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :bank_account_no ,:class=>"form-control", :required => true %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Bank Name </label>
                      <div class="col-lg-8">
                        <%= f.text_field :bank_name, :class=>"form-control"%><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Branch Name </label>
                      <div class="col-lg-8">
                        <%= f.text_field :branch_name, :class=>"form-control" %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> IFSC Code* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :ifsc_code, :class=>"form-control", :required => true %><br />
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-8">
                        <center><button class="btn btn-danger" type="submit">Save Changes</button>
                          <button class="btn btn-warning" type="back">Back</button>
                        </center>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            <% end %>
          </div>
        </section>
      </div>
  </section>
</section>
