<!-- ////////////////////////// -->
<section id="main-content">
  <section class="wrapper">
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
            List of Clients
          </header>
          <div style=" height: 200px; overflow: auto;">
          <table class=" table col-lg-12 table-bordered table-striped table-hover table-condensed",style="center;" >
          <thead> 
            <tr>
              <th>Client</th>
              <th colspan="3"><center>Client Details</center></th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <td><%= client.email %></td>
                <td>
                  <%=link_to "Assigned Resource Details Display", client_assigned_resources_display_user_sales_path(current_user,:assigned_id=>client)%><br> || || || || || <br>
                  <%= link_to "Add More Assigned Resources", client_assigned_resources_new_user_sales_path(current_user, :assigned_id=>client) %>
                </td>
                <td>
                  <%=link_to "Payment Details Display", client_payment_detail_display_user_sales_path(current_user,:assigned_id=>client)%><br> || || || || || <br>
                  <%= link_to "Add More Payment Details", client_payment_detail_new_user_sales_path(current_user, :assigned_id=>client) %>
                </td>
                <td>
                  <%=link_to "Project Details Display", client_project_details_display_user_sales_path(current_user,:assigned_id=>client)%><br> || || || || || <br>
                  <%= link_to "Add More Project Details", client_project_details_new_user_sales_path(current_user, :assigned_id=>client) %>
                </td>
              </tr>
            <% end %>
           </tbody>
        </table>
        </div>
        <%= link_to '<i class="fa fa-users "></i> Create User'.html_safe, new_user_registration_path %>
        <br/>
        </section>
      </div>
    </div>
  </section>
</section>
 