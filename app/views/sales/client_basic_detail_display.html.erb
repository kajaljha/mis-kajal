<section id="main-content">
  <section class="wrapper">
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
            <bold><h4>Clients Basic Details</h4></bold>
          </header>
              <table class="table" border="2">
                <tr>
                  <th>Name</th>
                  <td><%= @client.name.titleize %></td>
                </tr>
                <tr>
                  <th>Location</th>
                  <td><%= @client.location%></td>
                </tr>
              </table>
                <%= link_to "Edit", client_basic_detail_edit_user_sales_path(current_user) ,class: "btn btn-primary btn-xs"%> || 
                <%= link_to "Back", users_path, class: "btn btn-primary btn-xs"  %>
        </section>
      </div>
    </div>
  </section>
</section>
