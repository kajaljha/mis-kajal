<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
          <bold><h4>Client project Details</h4></bold>
        </header>
              <%= form_for @project_detail, :url =>  client_project_details_create_user_sales_path(current_user,:assigned_id=>@client_user) do |f| %>
              <div class=" col-lg-3">
              </div>
              <div class="panel-body">
              <div class=" form">
                <% if @project_detail.errors.any? %>
                <div id="error_explanation" class ="alert alert-danger">
                  <ul>
                    <% @project_detail.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>
                
                <div class=" form col-lg-9">
                  <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Select An Employee* </label>
                      <div class="col-lg-8">
                        <%= f.select(:employee_id, User.where("role=?","Employee").map{ |c| [c.first_name, "#{c.id}:#{c.first_name}"] },{}, {class: "form-control"}) %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Project Name* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :project_name ,:class=>"form-control", :required => true,:style => "text-transform: capitalize;" %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Description* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :description,:class=>"form-control", :required => true %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Technologies* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :technologies ,:class=>"form-control", :required => true %><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Project Start Date* </label>
                      <div class="col-lg-8">
                        <div class="field">
                          <%= f.date_select :project_start_date ,{order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 15, end_year: Date.today.year + 22 },{required: true}%><br /><br/>
                        </div>
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Estimated End Date*</label>
                      <div class="col-lg-8">
                        <div class="field">
                          <%= f.date_select :estimated_end_date ,{order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 15, end_year: Date.today.year + 22},{required: true} %><br /><br/>
                        </div>
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Project Type* </label>
                      <div class="col-lg-8">
                        <%= f.select :project_type, (['monthly_based','weekly_based','hourly_based','fixed_price_based']),{required: true}, {class: "form-control"} %><br /><br />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label class="col-lg-3 control-label"> Currency Type* </label>
                      <div class="col-lg-8">
                        <%= f.text_field :currency_type,:class=>"form-control", :required => true %><br />
                      </div>
                    </div>
                    <%= f.hidden_field :sales_id, :value=>current_user.id %>
                    <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-8">
                        <center>
                        <%= link_to "Back", client_lists_user_sales_path(current_user),class: "btn btn-primary btn-xs" %>
                        <button class="btn btn-danger" type="submit">Save Client Project Details</button>
                            <button class="btn btn-warning" type="reset">Reset</button>
                         </center>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            <% end %>
          </div>
        </section>
      </div>
  </section>
</section>
