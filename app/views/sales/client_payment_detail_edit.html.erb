<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
          <bold><h4>Edit Payment Details</h4></bold>
        </header>
            <%= form_for @clients, :url =>client_payment_detail_update_user_sales_path(current_user,:assigned_id=>@client_user) do |f| %>
            <div class="panel-body">
            <div class=" form">
              <% if @clients.errors.any? %>
              <div id="error_explanation" class ="alert alert-danger">
                <ul>
                  <% @clients.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>
              <div class="col-lg-9">
                <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Payment Mode*</label>
                    <div class="col-lg-8">
                      <%= f.text_field :payment_mode, :class=>"form-control", :required => true %><br/>
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Payment Amount* </label>
                    <div class="col-lg-8">
                      <%= f.text_field :payment_amount, :class=>"form-control", :required => true %><br/>
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Payment Date* </label>
                    <div class="col-lg-6">
                        <%= f.date_select :payment_date ,order: [:year,:month,:day,], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 15, end_year: Date.today.year + 22 %><br /><br />
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-8">
                      <center><button class="btn btn-danger" type="submit">Save Change</button>
                      <button class="btn btn-warning" type="back">Back</button></center>
                    </div>
                  </div>
              </div>
              </form>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</section>
</section>
