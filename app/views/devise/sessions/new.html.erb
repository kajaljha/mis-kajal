<div class="login-wrap form-signin container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <h2 class="form-signin-heading">sign in now</h2>
  <div class="login-wrap">
    <div>
      <%= f.email_field :email, :class=>"form-control", :placeholder => "Email" %>
    </div>
    <br/>
    <div>
      <%= f.password_field :password, autocomplete: "off", :class=>"form-control font_size", :placeholder => "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <label class="checkbox login-wrap ">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, :class=>"font_size "%>
      </label>
    <% end %>
    <button class="btn btn-lg btn-login btn-block" type="submit">Sign in</button>
    <%#= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>
  </div>
</div>
