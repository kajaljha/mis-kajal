<header class="header white-bg">
  <div class="sidebar-toggle-box">
    <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
  </div>
  <!--logo start-->
  <a href="/" class="logo">Affi<span>MIS</span></a>
  <!--logo end-->
  <div class="nav notify-row" id="top_menu">
    <!--  notification start -->
    <ul class="nav top-menu">
      <!-- settings start -->
      <li class="dropdown">
        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
        <i class="fa fa-tasks"></i>
        <span class="badge bg-success">6</span>
        </a>
        <ul class="dropdown-menu extended tasks-bar">
          <div class="notify-arrow notify-arrow-green"></div>
          <li>
            <p class="green">You have 6 pending tasks</p>
          </li>
          <li>
            <a href="#">
              <div class="task-info">
                <div class="desc">Dashboard v1.3</div>
                <div class="percent">40%</div>
              </div>
              <div class="progress progress-striped">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                  <span class="sr-only">40% Complete (success)</span>
                </div>
              </div>
            </a>
          </li>
          <li>
            <a href="#">
              <div class="task-info">
                <div class="desc">Database Update</div>
                <div class="percent">60%</div>
              </div>
              <div class="progress progress-striped">
                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                  <span class="sr-only">60% Complete (warning)</span>
                </div>
              </div>
            </a>
          </li>
          <li>
            <a href="#">
              <div class="task-info">
                <div class="desc">Iphone Development</div>
                <div class="percent">87%</div>
              </div>
              <div class="progress progress-striped">
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 87%">
                  <span class="sr-only">87% Complete</span>
                </div>
              </div>
            </a>
          </li>
          <li>
            <a href="#">
              <div class="task-info">
                <div class="desc">Mobile App</div>
                <div class="percent">33%</div>
              </div>
              <div class="progress progress-striped">
                <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 33%">
                  <span class="sr-only">33% Complete (danger)</span>
                </div>
              </div>
            </a>
          </li>
          <li>
            <a href="#">
              <div class="task-info">
                <div class="desc">Dashboard v1.3</div>
                <div class="percent">45%</div>
              </div>
              <div class="progress progress-striped active">
                <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
                  <span class="sr-only">45% Complete</span>
                </div>
              </div>
            </a>
          </li>
          <li class="external">
            <a href="#">See All Tasks</a>
          </li>
        </ul>
      </li>
      <!-- settings end -->
      <!-- inbox dropdown start-->
      <% if current_user.role != "Client"%>
        <li id="header_inbox_bar" class="dropdown">
         <a data-toggle="dropdown" class="dropdown-toggle" href="#" title="List of pending leaves.">
          <i class="fa fa-envelope-o"></i>
            <span class="badge bg-important">
               <% if current_user.role == "admin" || current_user.role == "Hr" %>
                 <%= pending_leave_count %>
               <% else %>
                 <%= employee_pending_leave_count%>
               <% end %>
            </span>
         </a>
          <ul class="dropdown-menu extended inbox">
            <div class="notify-arrow notify-arrow-red"></div>
            <li>
                <% if current_user.role == "admin" || current_user.role == "Hr" %>
                  <p class="red">You have <%= pending_leave_count %> new massage</p>
                <% else %>
                   <p class="red">You have <%= employee_pending_leave_count%> new massage</p>
                <% end %>
            </li>
              <div style=" height: 350px; overflow: auto;">
                <% if current_user.role == "admin" || current_user.role == "Hr" %>
                    <% if @pending_leaves.present? %>
                       <% @pending_leaves.each do |holiday| %>
                       <li>
                         <tr>
                           <td><i class="fa fa-envelope-o"></i>&nbsp;<strong>Leave for</strong>:-<%= link_to user_holiday_path( current_user,holiday) do %>
                             <%=holiday.leave_to_date%>&nbsp;to&nbsp;<%=holiday.leave_from_date%>
                             <%end%>
                           </td>                  
                         </tr>
                       </li>
                     <% end %>
                   <% end %>
                 <% elsif %>
                  <% if @employee_pending_leaves.present? %>
                    <% @employee_pending_leaves.each do |holiday| %>
                      <li>
                        <tr>
                           <td><i class="fa fa-envelope-o"></i>&nbsp;Leave for<%= link_to user_holiday_path( current_user,holiday) do %>
                            <%=holiday.leave_to_date%>&nbsp;to&nbsp;<%=holiday.leave_from_date%>
                            <%end%>
                          </td>                  
                        </tr>
                      </li>
                    <% end %>
                  <% end %>
                <% elsif %>
                  <strong>NO RECENT LEAVE !</strong>
                <% end %>

        
      </div>
    </li>
     
  </ul>  
</li>
<% end %>
        
   
      <!-- inbox dropdown end -->
      <!-- notification dropdown start-->
      <li id="header_notification_bar" class="dropdown">
        <a data-toggle="dropdown" class="dropdown-toggle" href="#" title="List of notifications.">
        <i class="fa fa-bell-o"></i>
        <span class="badge bg-warning">
          <%= unread_notifications_count %>
        </span>
        </a>
        <ul class="dropdown-menu extended notification">
          <div class="notify-arrow notify-arrow-yellow"></div>
          <li>
            <p class="yellow">You have <%= unread_notifications_count %> new notifications</p>
          </li>
          <div  style=" height: 100px; overflow: auto;">
          <li>  
            <% if @unread_notifications.present? %>
              <% @unread_notifications.each do |notification| %>
                <li>
                  <tr>
                  <td><i class="fa fa-bell"></i><%= link_to notification.title, user_notification_path(current_user, notification) %></td>
                  <td><%= notification.description %></td>
                  <!-- <td><%#= link_to 'Display Notification', user_notification_path(current_user, notification) %></td> -->
                  </tr>
                </li>
              <% end %>
            <% else %>
              <strong>NO RECENT NOTIFICATIONS !</strong>  
            <% end %>
          </li>
          </div>
          <!-- <li>
            <a href="#">
            <span class="label label-info"><i class="fa fa-bullhorn"></i></span>
            Application error.
            <span class="small italic">10 mins</span>
            </a>
          </li> -->
          <li>
            <%= link_to user_notifications_path(current_user) do %>
              <i class="fa fa-bell"></i>
              <span>See all notifications</span>
            <% end %>
          </li>
        </ul>
      </li>
      <!-- notification dropdown end -->
    </ul>
    <!--  notification end -->
  </div>
  <div class="top-nav ">
    <!--search & user info start-->
    <ul class="nav pull-right top-menu">
      <li>
        <input type="text" class="form-control search" placeholder="Search">
      </li>
      <!-- user login dropdown start-->
      <li class="dropdown">
        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
          <!-- <img alt="" src="img/avatar1_small.jpg"> -->
          <% if user_signed_in? %>
            <span class="username"><%= current_user.first_name.capitalize if current_user.first_name.present? %></span>
          <% end %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu extended logout">
          <div class="log-arrow-up"></div>
          <li><a href="#"><i class=" fa fa-suitcase"></i>Profile</a></li>
          <li><a href="#"><i class="fa fa-cog"></i> Settings</a></li>
          <li><a href="#"><i class="fa fa-bell-o"></i> Notification</a></li>
          <li>
            <%= link_to '<i class="fa fa-sign-out "></i> Logout'.html_safe, destroy_user_session_path, :method => :delete %>
          </li>
        </ul>
      </li>
      <!-- user login dropdown end -->
    </ul>
    <!--search & user info end-->
  </div>
</header>
