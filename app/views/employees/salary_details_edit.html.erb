<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;height:50px;color:#ffffff;">
          <bold><h4>Edit Salary Details</h4></bold>
        </header>
           <%= form_for @salary , :url => salary_details_update_user_employees_path(current_user) do |f| %>
              <div class="panel-body">
               <div class="form">
                <%if @salary.errors.any? %>
                  <div id="error_explanation" class ="alert alert-danger">
                    <ul>
                      <% @salary.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                   </div>
                <% end %>
              <div class=" form col-lg-9">
                <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">

                  <div class="form-group ">
                     <label class="col-lg-3 control-label"> User Type* </label>
                        <div class="col-lg-9">
                          <%= f.text_field :user_type,:class=>"form-control", :value => (current_user.role if current_user.role.present? || f.object.new_record? ),:readonly => true %><br/>
                        </div>
                  </div>


     
                  <div class="form-group ">
                      <label class="col-lg-3 control-label"> CTC* </label>
                       <div class="col-lg-9"> 
                          <%= f.text_field :ctc, :class=>"form-control",:required => true %><br />
                      </div>
                 </div>

                  <div class="form-group ">
                      <label class="col-lg-3 control-label"> Training Salary* </label>
                       <div class="col-lg-9"> 
                          <%= f.text_field :training_salary, :class=>"form-control",:required => true %><br />
                        </div>
                  </div>
  

                 <div class="form-group ">
                     <label class="col-lg-3 control-label"> Probation Salary*  </label>
                      <div class="col-lg-9">
                         <%= f.text_field :probation_salary, :class=>"form-control", :required => true %><br />
                      </div>
                </div>


                <div class="form-group ">
                   <label class="col-lg-3 control-label"> Confirmed Salary* </label>
                     <div class="col-lg-9">
                        <%= f.text_field :confirmed_salary, :class=>"form-control"%><br />
                    </div>
                </div>

                 <div class="form-group">
                     <div class="col-lg-offset-3 col-lg-9">
                            <center><button class="btn btn-warning" type="back">Back</button>
                            <button class="btn btn-danger" type="submit"> Save Salary Details</button>
                            </center>
                      </div>
                 </div>
              </form>
           </div>
         </div>
      <% end %>
    </div>
  </section>
  </div>
  </section>
</section>