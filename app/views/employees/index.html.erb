<section id="main-content">
  <h1 style="background:#2a3542;color:#ffffff;">Employee Details</h1>
  <table class="col-md-12 table table-bordered table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Emp_id</th>
        <th>User Name</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Of Birth</th>
        <th>Date Of Joining</th>
        <th>Blood Group</th>
        <th>Prevoius Company</th>
        <th>Designation</th>
        <th>Oficial Email Id </th>
        <th>Mobile No</th>
        <th>Landline No</th>
        <th>Current Address</th>
        <th>Permanent Address</th>
        <th>Skype Id</th>
        <th>Personal Email Id</th>
        <th>Guardian Full Name</th>
        <th>Guardian Mobile No</th>
        <th>Guardian Landline No</th>
        <th>Guardian Address</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_id %></td>
        <td><%= employee.user_name %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.dob %></td>
        <td><%= employee.doj %></td>
        <td><%= employee.blood_group%></td>
        <td><%= employee.prevoius_company%></td>
        <td><%= employee.designation%></td>
        <td><%= employee.oficial_email_id %></td>
        <td><%= employee.mobile%></td>
        <td><%= employee.landline %></td>
        <td><%= employee.current_address %></td>
        <td><%= employee.permanent_address %></td>
        <td><%= employee.skype_id %></td>
        <td><%= employee.personal_email_id%></td>
        <td><%= employee.guardian_full_name%></td>
        <td><%= employee.guardian_mobile%></td>
        <td><%= employee.guardian_landline%></td>
        <td><%= employee.guardian_address%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</section>
