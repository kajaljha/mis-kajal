<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;height:50px;color:#ffffff;">
          <bold><h4>Edit Bank Identity Details</h4></bold>
        </header>
            <%= form_for @bank, :url => bank_identity_detail_update_user_employees_path(current_user,:bankidentity => @bank.id) do |f| %>
            <div class=" col-lg-3">
            </div>
            <div class="panel-body">
            <div class="form">
              <%if @bank.errors.any? %>
              <div id="error_explanation" class ="alert alert-danger">
                <ul>
                  <% @bank.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>
              <div class=" form col-lg-9">
                <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                  <!-- <div class="form-group "> -->
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Bank Account No* </label>
                    <div class="col-lg-8">
                      <%= f.text_field :bank_account_no, :class=>"form-control", :required => true %><br />
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Bank Name* </label>
                    <div class="col-lg-8">
                      <%= f.text_field :bank_name,  :class=>"form-control", :required => true %><br />
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Branch Name* </label>
                    <div class="col-lg-8">
                      <%= f.text_field :branch_name,  :class=>"form-control", :required => true  %><br />
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> City* </label>
                    <div class="col-lg-8">
                      <%= f.text_field :city, :class=>"form-control" %><br />
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> IFSC Code* </label>
                    <div class="col-lg-8">
                      <%= f.text_field :ifsc_code,  :class=>"form-control", :required => true  %><br />
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Pancard No* </label>
                    <div class="col-lg-8">
                      <%= f.text_field :pancard_no,  :class=>"form-control", :required => true %><br />
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> Passport No</label>
                    <div class="col-lg-8">
                      <%= f.text_field :passport_no,  :class=>"form-control" %><br />
                    </div>
                  </div>
                  <div class="form-group ">
                    <label class="col-lg-3 control-label"> UID No</label>
                    <div class="col-lg-8">
                      <%= f.text_field :uid_no,  :class=>"form-control" %><br />
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-8">
                      <center><button class="btn btn-warning" type="back">Back</button>
                        <button class="btn btn-danger" type="submit">Save Change</button>
                      </center>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    </div>
 </section>
</section>
