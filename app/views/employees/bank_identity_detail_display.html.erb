<section id="main-content">
 <section class="wrapper">
    <div class="row">
      <div class="col-lg-12">
  <section class="panel">
          <header class="panel-heading" style="background:#2a3542;height:50px;color:#ffffff;">
            <bold><h4>Bank Identity Details</h4></bold>
          </header>
  <table class="col-md-12 table table-bordered table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Bank Account no</th>
        <th>Bank Name</th>
        <th>Branch Name</th>
        <th>City</th>
        <th>IFSC Code</th>
        <th>Pancard No</th>
        <th>Passport No</th>
        <th>UID No</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @banks.each do |bank| %>
        <tr>
          <td><%= bank.bank_account_no %></td>
          <td><%= bank.bank_name.titleize%></td>
          <td><%= bank.branch_name.titleize%></td>
          <td><%= bank.city %></td>
          <td><%= bank.ifsc_code%></td>
          <td><%= bank.pancard_no%></td>
          <td><%= bank.passport_no %></td>
          <td><%= bank.uid_no%></td>
          <td><%= link_to "Edit",  bank_identity_detail_edit_user_employees_path(current_user,:bankidentity => bank),class: "btn btn-primary btn-xs" %></td>
        </tr>
      <% end %>
     </tbody>
  </table>
  </section>
  <br>
  <%= link_to "Add More", bank_identity_detail_new_user_employees_path(current_user),class: "btn btn-primary btn-xs" %>
</div>
  </div>
  </section>
</section>
