<section id="main-content">
  <section class="panel">
   <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;height:50px;color:#ffffff;">
          <bold><h4>Academic Details</h4></bold>
        </header>
    <%= form_for @academic, :url => academic_skill_detail_update_user_employees_path(current_user, :academic => @academic.id) do |f| %>
        <div class=" col-lg-3">
        </div>
           <div class="panel-body">
           <div class="form">
	          <% if @academic.errors.any? %>
                  <div id="error_explanation" class ="alert alert-danger">
                    <ul>
                      <% @academic.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                   </div>
                <% end %>
              <div class=" form col-lg-9">
                  <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
	           <!-- <div class="form-group "> -->
                      <div class="form-group ">
	                       <label class="col-lg-3 control-label"> Course Name* </label>
	                           <div class="col-lg-8">
		                            <%= f.text_field :course_name, :class=>"form-control", :style => "text-transform: capitalize;",:required => true %><br />
	                           </div>
                      </div>
    
                      <div class="form-group ">
		                     <label class="col-lg-3 control-label"> University Name* </label>
                           <div class="col-lg-8">
		                         <%= f.text_field :university_name, :style => "text-transform: capitalize;", :class=>"form-control", :required => true %><br />
	                         </div>
                      </div>

                      <div class="form-group ">
                         <label class="col-lg-3 control-label"> Year Of Passing*</label>
                           <div class="col-lg-8">
		                        <%= f.date_select :year_of_passing ,{order: [:year], prompt: {  year: 'Select year' }, start_year: Date.today.year - 0, end_year: Date.today.year - 100} , {required: true}%>
                             <br /><br />
	                          </div>
                       </div>
	
	                    <div class="form-group ">
	                      <label class="col-lg-3 control-label"> Percentage* </label>
	                          <div class="col-lg-8">
		                           <%= f.text_field :percentage,  :class=>"form-control", :required => true  %><br />
	                          </div>
                      </div>

	                    <div class="form-group ">
			                    <label class="col-lg-3 control-label"> Board* </label>
		                         <div class="col-lg-8">
			                           <%= f.text_field :board,  :class=>"form-control", :required => true  %><br />
		                          </div>
	                    </div>

                     

	                     <div class="form-group">
	                         <div class="col-lg-offset-3 col-lg-8">
                                <center><button class="btn btn-warning" type="back">Back</button>
                                <button class="btn btn-danger" type="submit">Save Changes</button>
   </center>

                           </div>
                       </div>
                       
   <!-- <div class="col-lg-offset-2 col-lg-10">
		<button class="btn btn-lg btn-login btn-block" type="submit">"Add a new academic_skill"</button>
	</div> -->
              </form>
           </div>
       </div>
    <% end %>
    </div>
 </section>
</section>