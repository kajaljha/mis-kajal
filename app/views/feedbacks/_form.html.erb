<section id="main-content">
  <section class="panel">
    <div class="col-lg-12">
      <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#DEB887;height:50px;">
          <bold><h4>Create A New Feedback</h4></bold>
        </header>

          <%= form_for @feedback, url: (@feedback.persisted? ?  user_feedback_path(current_user,@feedback) : user_feedbacks_path(current_user)) do |f| %>
            <div class=" col-lg-3">
            </div>
              <div class="panel-body">
                <div class="form">
                  <% if @feedback.errors.any? %>
                    <div id="error_explanation" class ="alert alert-danger">
                      <ul>
                        <% @feedback.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                     </div>
                  <% end %>

                  <div class=" form col-lg-9">
                    <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
                    <!-- <div class="form-group "> -->

                  <!--  <div class="form-group ">
                        <label class="col-lg-3 control-label">Client Name </label>
                        <div class="col-lg-8">
                        <%#= f.text_field :first_name, :class=>"form-control", :value => (current_user.first_name if current_user.first_name.present? || f.object.new_record? ),:readonly => true %><br/>
                      </div>
                    </div> -->
                   <div class="form-group ">
                      <label class="col-lg-3 control-label">Project Name</label>
                        <div class="col-lg-8">

                        <%= f.select(:client_project_detail_id, ClientProjectDetail.where("user_id=?",current_user.id).map{ |c| [c.project_name, "#{c.id}:#{c.project_name}"] },{}, {class: "form-control"}) %><br />
                        </div>
                    </div>

                    

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Punctuality </label>
                          <div class="col-lg-8">
                          <%#= f.select :role, (['Sales-BDE','Client']), {}, class: "form-control" %>
                            <%= f.select :punctuality, (['1','2','3','4','5']), {}, class: "form-control" %><br />  
                          </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Communication </label>
                          <div class="col-lg-8">
                            <%= f.select :communication, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Behavior </label>
                          <div class="col-lg-8">
                            <%= f.select :behavior, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Commitment to achieve Deadlines </label>
                          <div class="col-lg-8">
                            <%= f.select :meet_to_deadline, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div>    
                      
                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Daily Reporting </label>
                          <div class="col-lg-8">
                            <%= f.select :daily_reporting, (['1','2','3','4','5']), {}, class: "form-control" %><br />  
                          </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Problem Solving </label>
                          <div class="col-lg-8">
                            <%= f.select :problem_solving, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Research Capabilities </label>
                          <div class="col-lg-8">
                            <%= f.select :research_capabilities, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Self Motivated </label>
                          <div class="col-lg-8">
                            <%= f.select :self_motivated, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div> 

                       <div class="form-group ">
                        <label class="col-lg-3 control-label"> Understanding of Tasks </label>
                          <div class="col-lg-8">
                            <%= f.select :understanding_of_tasks, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div>

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Working in a Team </label>
                          <div class="col-lg-8">
                            <%= f.select :working_in_a_team, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div>


                       <div class="form-group ">
                        <label class="col-lg-3 control-label"> Overall Rating</label>
                          <div class="col-lg-8">
                            <%= f.select :overall_rating, (['1','2','3','4','5']), {}, class: "form-control" %><br />
                          </div>
                      </div> 

                      <div class="form-group ">
                        <label class="col-lg-3 control-label"> Remark </label>
                          <div class="col-lg-8">
                            <%= f.select :remark, (['Good','Average','Excellent']), {}, class: "form-control" %><br />
                          </div>
                      </div> 

                       <div class="form-group ">
                        <label class="col-lg-3 control-label"> Feedback* </label>
                          <div class="col-lg-8">
                            <%= f.text_area :feedback, :style => "text-transform: capitalize;", :class=>"form-control", :required => true  %><br />
                          </div>
                      </div>

                     <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-8">
                          <center><button class="btn btn-danger" type="submit">Create Feedback</button>
                          <button class="btn btn-warning" type="reset">Reset</button>
                          </center>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
          <% end %>
       </section>
    </div>
  </section>
</section>