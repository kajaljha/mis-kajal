<section id="main-content">
  <section class="panel" style ="margin:20px">
    <center><h2 style="background:#2a3542;color:#ffffff;">Invoice</h2></center>
      <div class=" col-lg-3">
      </div>
      <div class="panel-body">
        <div class="form">
          <div class=" form col-lg-9">
            <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
            <!-- <div class="form-group "> -->
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Invoice Date </label>
                <div class="col-lg-8">
                  <%= @invoice.invoice_date %><br />
                </div>
              </div>

              <div class="form-group ">
                <label class="col-lg-3 control-label"> Invoice Number </label>
                  <div class="col-lg-8">
                    <%= @invoice.invoice_number %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Bill To </label>
                  <div class="col-lg-8">
                    <%= @invoice.bill_to %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Currency </label>
                  <div class="col-lg-8">
                    <%= @invoice.currency %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Tax </label>
                  <div class="col-lg-8">
                    <%= @invoice.tax %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Discount </label>
                  <div class="col-lg-8">
                    <%= @invoice.discount %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Due Date </label>
                  <div class="col-lg-8">
                    <%= @invoice.due_date %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Note </label>
                  <div class="col-lg-8">
                    <%= @invoice.note %><br />
                  </div>
              </div>
              <div class="form-group">
                <table class="col-md-12 table-bordered table-striped table-hover table-condensed" id="editable-sample">
                  <thead>
                    <tr>
                      <th>Items</th>
                      <th>Description</th>
                      <th>Unit Cost</th>
                      <th>Quantity</th>
                      <th>Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @invoice.invoice_items.each do |invoice_item| %>
                      <tr>
                        <td><%= invoice_item.item %></td>
                        <td><%= invoice_item.description %></td>
                        <td><%= invoice_item.unit_cost %></td>
                        <td><%= invoice_item.quantity %></td>
                        <td><%= invoice_item.price %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <div class="form-group ">
                <label class="col-lg-3"> Sub-Total </label>
                  <div class="col-lg-4">
                    <%= @invoice.currency.split("-").first %><br />
                  </div>
                  <div class="col-lg-4">
                    <%= get_total_price(@invoice) %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3"> Discount </label>
                  <div class="col-lg-4">
                    <%= @invoice.currency.split("-").first %><br />
                  </div>
                  <div class="col-lg-4">
                    <%= @invoice.discount %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3"> Tax </label>
                  <div class="col-lg-4">
                    <%= @invoice.currency.split("-").first %><br />
                  </div>
                  <div class="col-lg-4">
                    <%= @invoice.tax %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3"><strong> Amount Due </strong></label>
                  <div class="col-lg-4">
                    <%= @invoice.currency.split("-").first %><br />
                  </div>
                  <div class="col-lg-4">
                    <strong><%= get_amount_due(@invoice) %></strong><br />
                  </div>
              </div>

              <%= link_to "BACK", user_invoices_path(current_user), class: "btn btn-primary btn-xs" %>
            </form>
          </div>
        </div>
      </div>
  </section>
</section>
