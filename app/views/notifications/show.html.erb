<section id="main-content">
  <section class="panel">
    <div class="col-lg-12">
     <section class="panel" style= padding-top:5px;>
        <header class="panel-heading" style="background:#2a3542;color:#ffffff;">
          <bold><h4>Notification</h4></bold>
        </header>
      <div class=" col-lg-3">
      </div>
      <div class="panel-body">
        <div class="form">
          <div class=" form col-lg-9">
            <form class="cmxform form-horizontal tasi-form" id="commentForm" method="get" action="">
            <!-- <div class="form-group "> -->
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Title </label>
                <div class="col-lg-8">
                  <%= @notification.title %><br />
                </div>
              </div>

              <div class="form-group ">
                <label class="col-lg-3 control-label"> Description </label>
                  <div class="col-lg-8">
                    <%= @notification.description %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Remark </label>
                  <div class="col-lg-8">
                    <%= @notification.remark %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Published At </label>
                  <div class="col-lg-8">
                    <%= @notification.created_at.strftime("%d %b. %Y") %><br />
                  </div>
              </div>
              <div class="form-group ">
                <label class="col-lg-3 control-label"> Published By </label>
                  <div class="col-lg-8">
                    <%= @notification.user.first_name %>(<%=@notification.user.role%>)<br />
                  </div>
              </div>
              <%= link_to "BACK", user_notifications_path(current_user), class: "btn btn-primary btn-xs" %>
            </form>
          </div>
        </div>
      </div>
      </section>
      </div>
  </section>
</section>
